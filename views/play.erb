<h1><%= @player_1_name %> vs. <%= @player_2_name %>.</h1>
<p><%= @player_1_name %> HP: <%= @player_1_hp %>.</p>
<p><%= @player_2_name %> HP: <%= @player_2_hp %>.</p>

<form action="/play" method="post">
  <input type="submit" value="Attack">
</form>

<% if @attacked %>

<p><%= @player_1_name %> attacked <%= @player_2_name %>.</p>

<% end %>
